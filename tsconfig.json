{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "target": "es5",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@fui-components/*": [
        "packages/*/src"
      ],
      "*": [
        "node_modules",
        "packages"
      ]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  },
  "include": [
    "packages",
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}